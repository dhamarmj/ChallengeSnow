@page
@model ChallengeSnow.Pages.Items.CreateModel
@{
}

<br />
<h2 class="text-info">Create New Item</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly">

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Item.Available_Quantity"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Available_Quantity" class="form-control" />
            </div>
            <span asp-validation-for="Item.Available_Quantity" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Item.Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Price" class="form-control" />
            </div>
            <span asp-validation-for="Item.Price" class="text-danger"></span>
        </div>
       <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>



@*to make the validation not enter the client side*@
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
